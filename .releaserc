{
    "branches": [
        "main",
        "+([0-9])?(.{+([0-9]),x}).x",
        {
            "name": "dev",
            "prerelease": "beta"
        }
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        ["@google/semantic-release-replace-plugin", {
            "replacements": [
                {
                    "files": ["App/MainConfig.xcconfig"],
                    "from": "MARKETING_VERSION = .*",
                    "to": "MARKETING_VERSION = ${nextRelease.version}",
                    "results": [{
                        "file": "App/MainConfig.xcconfig",
                        "hasChanged": true,
                        "numMatches": 1,
                        "numReplacements": 1
                    }],
                    "countMatches": true          
                },
                {
                    "files": ["App/MainConfig.xcconfig"],
                    "from": "COMMIT = .*",
                    "to": "COMMIT = ${nextRelease.gitHead}",
                    "results": [{
                        "file": "App/MainConfig.xcconfig",
                        "hasChanged": true,
                        "numMatches": 1,
                        "numReplacements": 1
                    }],
                    "countMatches": true          
                }
            ]
        }],
        ["@semantic-release/exec", {
            "generateNotesCmd": "git-cliff ${lastRelease.gitHead}..${nextRelease.gitHead} -t ${nextRelease.version}",
            "prepareCmd": "git-cliff -t ${nextRelease.version} > CHANGELOG.md; make all"
        }],
        ["@semantic-release/git", {
            "assets": ["CHANGELOG.md"],
            "message": "chore(version): ${nextRelease.version} [skip ci]"
        }],
        ["@semantic-release/github", {
            "assets": [
                {
                    "path": "App/*.ipa"
                },
                {
                    "path": "App/*.dmg"
                },
                {
                    "path": "App/*.tar.gz"
                }
            ]
        }]
    ],
    "tagFormat": "${version}"
}